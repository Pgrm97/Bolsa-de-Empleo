extends ../../layout.jade
block contenido
	div(class="container")
		h1 My images
		for imagen in imagenes
			.white.border.tr.large-padding
				.row
					.col-md-10
						h2 #{imagen.title}
					.col-md-2
						a(href="/app/imagenes/#{imagen._id}/edit") Editar <br>
						form(action="/app/imagenes/#{imagen._id}?_method=DELETE" class="link", method="POST") 
							input(type="Submit", value = "Eliminar")