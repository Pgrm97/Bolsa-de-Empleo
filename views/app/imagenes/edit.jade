extends ../../layout.jade
block contenido
	h1 Edit your image
	div(class="center-block text-center big-top-space center-it")
		form(action="/app/imagenes/#{imagen._id}?_method=PUT",method="POST")
			input(type="hidden" value="PUT", name="_method")
			div(class="form-group")
				label(for="title") Titulo
				input(type="text", name="title", placeholder="Titulo de la imagen",id="title", class="form-control", value="#{imagen.title}")
			div
				input(type="submit" value="Guardar" class="btn btn-info")